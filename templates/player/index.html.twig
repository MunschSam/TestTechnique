{% extends 'base.html.twig' %}

{% block title %}Player index{% endblock %}

{% block body %}
    <h1>Joueurs</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Name</th>
                <th>Firstname</th>
                <th>BirthDate</th>
                <th>MatchPlayed</th>
                <th>PlayTime</th>
                <th>GoalScored</th>
                <th>DecisivePass</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for player in players %}
            <tr>
                <td>{{ player.id }}</td>
                <td>{{ player.email }}</td>
                <td>{{ player.name }}</td>
                <td>{{ player.firstname }}</td>
                <td>{{ player.birthDate ? player.birthDate|date('Y-m-d') : '' }}</td>
                <td>{{ player.matchPlayed }}</td>
                <td>{{ player.playTime }}</td>
                <td>{{ player.goalScored }}</td>
                <td>{{ player.decisivePass }}</td>
                <td>
                    <a href="{{ path('player_show', {'id': player.id}) }}">show</a>
                    <a href="{{ path('player_edit', {'id': player.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('player_new') }}">Create new</a>
{% endblock %}
