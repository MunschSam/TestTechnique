{% extends 'base.html.twig' %}

{% block title %}Season{% endblock %}

{% block body %}
<div class="uk-flex uk-margin-left">
    <h1>Saison {{ season.year }}</h1>
<div class="uk-margin-left">
    <a href="{{ path('season_edit', {'id': season.id}) }}">edit</a>
</div>
<div class="uk-margin-left">
    {{ include('season/_delete_form.html.twig') }}
</div>
</div>

 <div class="uk-margin-medium-left uk-margin-bottom">   
    <h4>Joueurs :</h4>
</div>
    {% for player in players %}
    <div class="uk-margin-medium-left uk-margin-medium-bottom">
        <li><a href="{{path("player_show", {id :player.id }) }}">{{ player.name }} {{ player.firstname }} </a></li>
    </div>
    {% else %}
        <li>Aucun joueurs pour cette saison </li>
    {% endfor %}

<div class="uk-margin-left">
    <a href="{{ path('season_index') }}">back to list</a>
</div>

    
{% endblock %}
